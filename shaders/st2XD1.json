        "renderpass": [
            {
                "code": "void mainImage( out vec4 fragColor, in vec2 fragCoord )\n{\n    // Normalized pixel coordinates (from 0 to 1)\n    vec2 uv = fragCoord/iResolution.xy;\n    float i;\n    if (iMouse.z>0.0) { i=iMouse.x/iResolution.x; }\n    else { i=mod((iTime*.5),32.0)/32.0; }\n    vec3 col;\n    if (uv.x<.497) { col=texture(iChannel0,vec3(uv*vec2(2.02,1.0),i)).rrr; }\n    else if (uv.x>.503) { col=texture(iChannel1,vec3(uv*vec2(2.02,1.0)-vec2(1.01606,0.),i)).rgb; }\n    else { col=vec3(0.,0.,0.); }\n    // Output to screen\n    fragColor = vec4(col,1.0);\n}",
