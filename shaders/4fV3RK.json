            {
                "code": "mat2 M;\nfloat map (vec3 p) {\n    float w = 0.;\n    for (float i = 1.; i < 10.; i++) {\n        w += (B((p.xy+10.*float(iFrame)/60./R.x)*.3*exp(i)).x*3.)*exp(-i);\n        p.xy *= M;\n    }\n    return abs(p.z-w)-.04;\n    \n}\nvec3 normal(vec3 p) {\n   vec2 e = vec2(5e-2,0);\n   return normalize(vec3(\n       map(p+e.xyy)-map(p-e.xyy),\n       map(p+e.yxy)-map(p-e.yxy),\n       map(p+e.yyx)-map(p-e.yyx)\n   ));\n}\nMain {\n    M = ei(.9);\n    vec2 h = hash(vec4(U,iFrame,iTime)).xy;\n    h.y *= 2.*3.1415926;\n    h = vec2(cos(h.y),sin(h.y))*3.*(.5+.5*sin(.3+3.*h.y));\n    h = h/R.x;\n    vec3 p = vec3(200.*h,-4.);\n    vec3 d = normalize(vec3(2.*(U-.5*R)/R.y-40.*h,1));\n    \n    p.yz *= ei(.5);\n    d.yz *= ei(.5);\n    p.xy *= ei(-0.3);\n    d.xy *= ei(-0.3);\n\n    for (float i = 0.; i < 100.; i++) {\n        \n        p += .5*d*map(p);\n        \n    }\n    d = reflect(d,normal(p));\n    Q = A(U)*.95 + .05*pow(texture(iChannel2,d),vec4(50.));\n\n}",
